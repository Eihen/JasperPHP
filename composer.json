{
    "name": "eihen/jasper-php",
    "type": "library",
    "description": "A PHP library to compile and generate JasperReports using JasperStarter",
    "keywords": [
        "Eihen",
        "JasperPHP",
        "jasperreports",
        "jasper-reports",
        "php-reporting-tools",
        "php-reports",
        "reports",
        "jasperphp",
        "jasperstarter",
        "jaspersoft"
    ],
    "homepage": "https://github.com/Eihen/JasperPHP",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Emerson Belancieri",
            "email": "emersonbelancieri@gmail.com",
            "homepage": "https://github.com/Eihen",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^7.0",
        "eihen/jasperstarter-bin": "^1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "sebastian/diff": "^2.0",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "Eihen\\JasperPHP\\": ["src/", "src/DatabaseProcessors/", "src/FileProcessors"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eihen\\JasperPHP\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "sort-packages": true
    }
}
